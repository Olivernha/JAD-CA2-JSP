<web-app>
    <!-- JSP Servlet Configuration -->
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>modificationTestInterval</param-name>
            <param-value>0</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>

    <!-- Admin Authentication Filter -->
    <filter>
        <filter-name>AdminAuthFilter</filter-name>
        <filter-class>servlets.AdminAuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AdminAuthFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <!-- User Authentication Filter -->
    <filter>
        <filter-name>UserAuthFilter</filter-name>
        <filter-class>servlets.UserAuthFilter</filter-class>
    </filter>

    <filter-mapping>
	    <filter-name>UserAuthFilter</filter-name>
	    <url-pattern>/user/profile/*</url-pattern> <!-- More specific pattern -->
</filter-mapping>
<error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>

    <!-- Display JSP compilation errors -->
    <init-param>
        <param-name>development</param-name>
        <param-value>true</param-value>
    </init-param>

    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

</web-app>
